<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="BorealForest"]/wildAnimals</xpath>
                    <value>
                        <RG-EAP_WoollyMammoth>0.5</RG-EAP_WoollyMammoth>
						<RG-EAP_WoollyRhinoceros>0.2</RG-EAP_WoollyRhinoceros>
						<RG-EAP_ArcticDrak>0.2</RG-EAP_ArcticDrak>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="Tundra"]/wildAnimals</xpath>
                    <value>
                        <RG-EAP_WoollyMammoth>0.5</RG-EAP_WoollyMammoth>
						<RG-EAP_WoollyRhinoceros>0.5</RG-EAP_WoollyRhinoceros>
						<RG-EAP_ArcticDrak>0.3</RG-EAP_ArcticDrak>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="ColdBog"]/wildAnimals</xpath>
                    <value>
                        <RG-EAP_WoollyMammoth>0.3</RG-EAP_WoollyMammoth>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="IceSheet"]/wildAnimals</xpath>
                    <value>
						<RG-EAP_WoollyRhinoceros>0.1</RG-EAP_WoollyRhinoceros>
						<RG-EAP_ArcticDrak>0.1</RG-EAP_ArcticDrak>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="SeaIce"]/wildAnimals</xpath>
                    <value>
						<RG-EAP_ArcticDrak>0.1</RG-EAP_ArcticDrak>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
	
    <Operation Class="PatchOperationFindMod">
        <mods>
			<li>ReGrowth - Volcanic Ice Sheet</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="RG-VIS_VulcanicIceSheet"]/wildAnimals</xpath>
                    <value>
                        <RG-EAP_WoollyMammoth>0.5</RG-EAP_WoollyMammoth>
						<RG-EAP_WoollyRhinoceros>0.2</RG-EAP_WoollyRhinoceros>
						<RG-EAP_ArcticDrak>0.2</RG-EAP_ArcticDrak>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>